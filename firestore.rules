// Paste these into Firebase Console → Firestore → Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Per-user profile doc + legacy data subcollections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Household doc
    match /households/{householdId} {
      allow create: if request.auth != null;

      allow read: if request.auth != null
        && (
          request.auth.uid in resource.data.members
          || request.auth.token.email in resource.data.pendingInvites
        );

      allow update: if request.auth != null
        && (
          // Existing members can update
          request.auth.uid in resource.data.members
          // Pending invitees can update (to add themselves when accepting)
          || request.auth.token.email in resource.data.pendingInvites
          // Join-by-ID fallback: user adds exactly themselves
          || (
            request.resource.data.members.hasAll(resource.data.members)
            && request.resource.data.members.size() == resource.data.members.size() + 1
            && request.auth.uid in request.resource.data.members
            && request.resource.data.memberEmails.hasAll(resource.data.memberEmails)
            && request.resource.data.memberEmails.size() == resource.data.memberEmails.size() + 1
            && request.auth.token.email in request.resource.data.memberEmails
          )
        );
    }

    // Household data — members only
    match /households/{householdId}/data/{docId} {
      allow read, write: if request.auth != null
        && request.auth.uid in
           get(/databases/$(database)/documents/households/$(householdId)).data.members;
    }

    // ─── Invitations ───
    match /invitations/{invitationId} {
      // Create: household members can invite
      allow create: if request.auth != null
        && request.resource.data.status == "pending"
        && request.resource.data.inviteeEmail is string
        && request.resource.data.householdId is string
        && request.auth.uid in
           get(/databases/$(database)/documents/households/$(request.resource.data.householdId)).data.members;

      // Read: invitee or household members
      allow read: if request.auth != null
        && (
          request.auth.token.email == resource.data.inviteeEmail
          || request.auth.uid in
             get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members
        );

      // Update: only invitee, only status change from pending
      allow update: if request.auth != null
        && request.auth.token.email == resource.data.inviteeEmail
        && resource.data.status == "pending"
        && request.resource.data.status in ["accepted", "declined"]
        && request.resource.data.householdId == resource.data.householdId
        && request.resource.data.inviteeEmail == resource.data.inviteeEmail
        && request.resource.data.invitedBy == resource.data.invitedBy;

      // Delete: household members can cancel
      allow delete: if request.auth != null
        && request.auth.uid in
           get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.members;
    }
  }
}
